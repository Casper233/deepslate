{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "Node16",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"lib": [
			"dom",
			"esnext"
		],

		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,

		"pretty": true,
		"composite": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"incremental": true,
		"newLine": "LF",
		"skipLibCheck": true
	}
}
